@model User

    <h1>Register</h1>
    <form asp-action="CreateUser" asp-controller="Home" method="post">
        <div class="form-group">
            <span asp-validation-for="FirstName"></span>
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName">
        </div>
            <span asp-validation-for="LastName"></span>
            <label asp-for="LastName"></label>
            <input asp-for="LastName">
        <div class="form-group">
            <span asp-validation-for="Email"></span>
            <label asp-for="Email"></label>
            <input asp-for="Email">
        </div>
        <div class="form-group">
            <span asp-validation-for="Password"></span>
            <label asp-for="Password"></label>
            <input asp-for="Password">
        </div>
        <div class="form-group">
            <span asp-validation-for="Confirm"></span>
            <label asp-for="Confirm"></label>
            <input asp-for="Confirm">
        </div>
        <div class="form-group">
            <span asp-validation-for="Birthdate"></span>
            <label asp-for="Birthdate"></label>
            <input asp-for="Birthdate" type="date">
        </div>
            <input value="Add User" type="submit">
    </form>
